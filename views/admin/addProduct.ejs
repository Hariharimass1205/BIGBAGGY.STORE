<%- include('../layouts/adminHeader.ejs') %>

<main class="main-wrap">
    <header class="main-header navbar">
        <div class="col-search">
            <form class="searchform">
                <div class="input-group">
                    <!-- Search form can be added here -->
                </div>
            </form>
        </div>
        <div>
            <a href="/admin" class="btn btn-primary">Logout</a>
        </div>
    </header>

    <section class="content-main">
        <div class="row">
            <div class="col-12">
                <div class="content-header">
                    <h2 class="content-title">Add New Product</h2>
                </div>
                <div class="card mb-4">
                    <div class="card-header">
                        <h4>Basic</h4>
                        <% if (productAlreadyExists) { %>
                        <h4 style="color: red;">Product Name Already Exist</h4>
                        <% } %>
                    </div>
                    <div class="card-body">
                        <form action="/admin/addproduct" method="POST" enctype="multipart/form-data">
                            <div class="modal-body">
                                <div class="input-group mb-3">
                                    <input name="productName" id="productName" type="text" class="form-control"
                                        placeholder="Product Name" required />
                                </div>

                                <div class="input-group mb-3">
                                    <span>Select Parent Category</span>
                                    <select name="parentCategory" class="form-select" aria-label="Default select example">
                                        <% categories.forEach((category) => { %>
                                            <option value="<%= category.categoryName %>"><%= category.categoryName %></option>
                                        <% }) %>
                                    </select>
                                </div>

                                <!-- Image Upload and Cropping for 3 Images -->
                                <% for (var i = 1; i <= 3; i++) { %>
                                <div class="mb-4">
                                    <input id="input-img<%= i %>" name="productImage<%= i %>" type="file" class="form-control" accept="image/*"
                                        onchange="initializeCropper('preview<%= i %>', 'input-img<%= i %>', 'croppedImg<%= i %>')" required />
                                    <img id="preview<%= i %>" src="" style="max-width: 200px; display: none;" alt="Image Preview" />
                                    <img id="croppedImg<%= i %>" src="" style="max-width: 200px; display: none;" alt="Cropped Image" />
                                </div>
                                <% } %>

                                <div class="input-group mb-3">
                                    <input name="productPrice" type="number" class="form-control" min="1"
                                        placeholder="Product Price" required />
                                </div>
                                <div class="input-group mb-3">
                                    <input name="productStock" type="number" class="form-control" min="1"
                                        placeholder="Product Stock" required />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-info">Save changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.css"
    integrity="sha512-hvNR0F/e2J7zPPfLC9auFe3/SE0yG4aJCOd/qxew74NN7eyiSKjr7xJJMu1Jy2wf7FXITpWS1E/RY8yzuXN7VA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.js"
    integrity="sha512-9KkIqdfN7ipEW6B6k+Aq20PV31bjODg4AA52W+tYtAE0jE0kMx49bjJ3FgvS56wzmyfMUHbQ4Km2b7l9+Y/+Eg=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
function initializeCropper(previewId, inputId, croppedImgId) {
    var image = document.getElementById(previewId);
    var input = document.getElementById(inputId);
    var reader = new FileReader();
    reader.onload = function(e) {
        image.src = e.target.result;
        image.style.display = 'block';
        var cropper = new Cropper(image, {
            aspectRatio: 1,
            viewMode: 1,
            autoCropArea: 0.5, // Adjust this value to control the size of the cropping area
            ready: function () {
                var canvas = this.cropper.getCroppedCanvas();
                document.getElementById(croppedImgId).src = canvas.toDataURL();
                document.getElementById(croppedImgId).style.display = 'block';
            }
        });
    };
    reader.readAsDataURL(input.files[0]);
}
</script>
